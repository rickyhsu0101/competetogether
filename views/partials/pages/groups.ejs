<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      <%var userGroups = [];%>
      <%if(user){%>
        <%if(user.groups.length >0){%>
          <%var unparsed = user.groups.split(",");%>
          <%for(var j = 0; j < unparsed.length; j++){%>
            <%userGroups.push(parseInt(unparsed[j]));%>
          <%}%>
        <%}%>
      <%}%>
      
      <%if(groups){%>
        <%for(var i=0; i < groups.length; i++){%>
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">
                <%= groups[i].groupName %>
              </span>
              <p>
                <%= groups[i].groupDesc %>
              </p>
            </div>
            <div class="card-action">
              <%if(userGroups.indexOf(groups[i].groupId)!=-1){%>
                <h4>You are in this group!</h4>
              <%}else{%>
                <a href="
                  <%= '/group/' + groups[i].groupId %> 
                ">Join Group</a>
              <%}%>
              
            </div>
          </div>
        <%}%>
      <%}%>
        
      

    </div>
  </div>
</div>