<div class="container">
  <div class="row">
    <div class="col s12 m4" id ="profileColumn">
      <% if (profile.profileAvatar){%>
        <img class="z-depth-3" id="profileImg" src = "
          <%='/assets/img/uploads/' + profile.profileAvatar %>
        ">
      <%}else{%>
        <img class="z-depth-3" id="profileImg" src = "
          /assets/img/defaultAvatar.png
        ">
      <%}%>
      <h2 class="center-align">
        <%= profile.username %>
      </h2>
      <% if (user){ %>
        <% if(user.userId == profile.userId) {%>
          <div class="row">
            <div class="col s12 center-align">
              <a class="wave-effect waves-light btn profile-btns" id = "changeAvatar">Change Avatar</a>
            </div>
            <div class="col s12 center-align">
              <a href="/newgroup" class ="wave-effect waves-light btn profile-btns" style="margin-bottom: 0;">Create Group</a>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
    <div class="col s12 m8" id = "groupsColumn">
      <div class="row">
        <% if(user) { %>
          <% if(groups){%>
            <h4 class="center-align mb">Your Groups</h4>
            <% for(var i =0; i < groups.length; i++){ %>
              <a href="<%='/group/' + groups[i].groupId %>" class="card-title">
                <div class="col s12 m6">
                  <div class="card blue-grey darken-1 group">
                    <div class="card-content white-text">
                      <p class="group-name">
                        <%= groups[i].groupName %>
                      </p>
                      <p>
                        <%= groups[i].groupDesc %>
                      </p>
                    </div>
                  </div>
                </div>
              </a>
            <%}%>
          <%} else {%>
              <div class="col s12">
                <h2 class="center-align" style="margin-bottom:30px">You aren't in any groups yet!</h2>
                <a href = "/groups" id="join-groups" class="wave-effect waves-light btn-large">Go join some</a>
              </div>
            
          <%}%>
        <%}%>
      </div>
    </div>
  </div>
</div>


<!--Modals-->
<!-- Modal Structure -->
<% if(user){%>
  <% if(user.userId == profile.userId){%>
    <div id="git modalProfile" class="modal">
      <div class="modal-content">
        <form class="col s12" method="POST" action="
        <%= '/profile/' + user.userId %>
        " enctype= "multipart/form-data">
          <div class="row file-field input-field">
            <div class="col s12">
              <div class="btn">
                <span>Upload Avatar</span>
                <input type="file" name = "avatar" multiple>
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text" name= "fileName" placeholder="Upload an image">
              </div>
            </div>
          </div>
          <button class="wave-effect waves-light btn submitButton" type="submit">Upload Image</button>
        </form>
      </div>
    </div>
  <%}%>
<%}%>
